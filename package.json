{
  "name": "ngrx-utils",
  "version": "1.0.0",
  "description": "Utilities Library for NgRx",
  "main": "dist/index.js",
  "scripts": {
    "build": "ng-packagr -p package.json",
    "test": "ngc -p tsconfig.spec.json && jasmine dist/spec/*.spec.js",
    "publish": "npm publish dist",
    "precommit": "lint-staged",
    "lint": "tslint -c tslint.json 'src/**/*.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://sandangel@github.com/sandangel/ngrx-utils.git"
  },
  "keywords": [
    "ngrx",
    "redux",
    "state",
    "store",
    "state-mangement"
  ],
  "author": "San Nguyen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sandangel/ngrx-utils/issues"
  },
  "homepage": "https://github.com/sandangel/ngrx-utils#readme",
  "peerDependencies": {
    "@angular/core": "^5.1.3",
    "@ngrx/effects": "^4.1.1",
    "@ngrx/store": "^4.1.1",
    "rxjs": "^5.5.6"
  },
  "devDependencies": {
    "@angular/compiler": "^5.2.0",
    "@angular/compiler-cli": "^5.2.0",
    "@angular/core": "^5.2.0",
    "@ngrx/effects": "^4.1.1",
    "@ngrx/store": "^4.1.1",
    "@types/jasmine": "^2.8.0",
    "husky": "^0.14.3",
    "jasmine": "^2.8.0",
    "lint-staged": "^6.0.0",
    "ng-packagr": "^2.0.0-rc.10",
    "prettier": "^1.10.2",
    "rxjs": "^5.5.6",
    "tsickle": "^0.26.0",
    "tslint": "^5.9.1",
    "typescript": "^2.6.2"
  },
  "ngPackage": {
    "lib": {
      "entryFile": "public_api.ts"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write",
      "npm run lint",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120
  }
}
