{
  "$schema": "./node_modules/ng-packagr/package.schema.json",
  "name": "ngrx-utils",
  "version": "1.1.2",
  "description": "Utilities Library for NgRx",
  "main": "dist/index.js",
  "scripts": {
    "build": "ng-packagr -p package.json && tsc -p src/bin/tsconfig.json && chmod +x dist/bin/ngrx.js",
    "test": "jest --watch",
    "publish": "npm publish dist",
    "precommit": "lint-staged",
    "lint": "tslint -c tslint.json 'src/**/*.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://sandangel@github.com/sandangel/ngrx-utils.git"
  },
  "keywords": ["ngrx", "redux", "state", "store", "state-mangement"],
  "author": "San Nguyen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sandangel/ngrx-utils/issues"
  },
  "homepage": "https://github.com/sandangel/ngrx-utils#readme",
  "peerDependencies": {
    "@angular/core": "^5.1.3",
    "@ngrx/effects": "^4.1.1",
    "@ngrx/store": "^4.1.1",
    "rxjs": "^5.5.6"
  },
  "devDependencies": {
    "@angular/compiler": "^5.2.0",
    "@angular/compiler-cli": "^5.2.0",
    "@angular/core": "^5.2.0",
    "@ngrx/effects": "^4.1.1",
    "@ngrx/store": "^4.1.1",
    "@types/jest": "^22.0.1",
    "@types/lodash": "^4.14.92",
    "@types/node": "^9.3.0",
    "husky": "^0.14.3",
    "jest": "^22.0.6",
    "lint-staged": "^6.0.0",
    "lodash": "^4.17.4",
    "ng-packagr": "^2.0.0-rc.10",
    "prettier": "^1.10.2",
    "rxjs": "^5.5.6",
    "ts-jest": "^22.0.1",
    "tsickle": "^0.26.0",
    "tslint": "^5.9.1",
    "typescript": "^2.6.2"
  },
  "ngPackage": {
    "lib": {
      "entryFile": "public_api.ts"
    }
  },
  "lint-staged": {
    "*.{ts,js}": ["prettier --write", "npm run lint", "git add"],
    "*.{json,md}": ["prettier --write", "git add"]
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "src/spec/tsconfig.json"
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": ["<rootDir>/src/spec/**/*.spec.ts"],
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
    "transformIgnorePatterns": ["node_modules/(?!@ngrx)"],
    "modulePathIgnorePatterns": ["dist"]
  },
  "bin": {
    "ngrx": "bin/ngrx.js"
  }
}
